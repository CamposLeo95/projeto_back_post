{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@types/*": ["@types/*"]
		},
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": true,
		"noEmitOnError": true
	},
	"include": ["src", "@types"]
}
